<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textViewStyle">@style/Widget.TextView.Default</item>
        <item name="android:spinnerItemStyle">@style/Widget.Spinner.Custom</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.TextView.Default" parent="android:Widget.TextView">
        <item name="android:textColor">@color/defaultText</item>
    </style>

    <style name="TextViewTitle" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ButtonStyle" parent="Theme.AppCompat.Light">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Widget.Spinner.Custom" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:textSize">@dimen/textDefault</item>
    </style>

</resources>
